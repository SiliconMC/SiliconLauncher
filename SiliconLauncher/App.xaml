<Application x:Class="SiliconLauncher.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SiliconLauncher"
             xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
             StartupUri="Accounts/Login.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AdonisUI;component/ColorSchemes/Dark.xaml" />
                <ResourceDictionary Source="pack://application:,,,/AdonisUI.ClassicTheme;component/Resources.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Color x:Key="{x:Static adonisUi:Colors.Layer1BackgroundColor}">#121212</Color>
            <Color x:Key="{x:Static adonisUi:Colors.Layer1BorderColor}">#212121</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>