<adonisControls:AdonisWindow x:Class="SiliconLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SiliconLauncher"
        mc:Ignorable="d"
        xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
        xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"

        Title="Silicon"
        ResizeMode="NoResize" Height="270" Width="510" Background="#FF121212" TitleBarBackground="#FF121212" WindowStartupLocation="CenterScreen" Closed="AdonisWindow_Closed">
    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}" />
    </Window.Style>
    <Grid>
        <Label x:Name="WelcomeBackLabel" Content="Welcome back" HorizontalAlignment="Right" Margin="0,0,57,156" Width="288" FontFamily="/Silicon;component/Assets/#Inter" FontSize="39" VerticalAlignment="Bottom" Height="65" VerticalContentAlignment="Bottom" />
        <Label x:Name="LoggedInAsLabel" Content="User not logged in. Please restart Silicon." HorizontalAlignment="Right" Margin="0,87,105,136" Width="240" FontFamily="/Silicon;component/Assets/#Inter" FontWeight="Normal"/>
        <Button x:Name="LaunchButton" HorizontalAlignment="Left" Height="64" Margin="92,147,0,0" VerticalAlignment="Top" Width="223" FontFamily="/Silicon;component/Assets/#Inter" BorderBrush="#FF242424" Background="#FF202020" Click="LaunchButton_Click">
            <Label x:Name="PLAYText" Content="PLAY" HorizontalAlignment="Center" Width="213" FontFamily="/Silicon;component/Assets/#Inter" FontSize="36" Height="56" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center" />
        </Button>
        <Button x:Name="SettingsButton" Content="Settings" Height="30" Margin="320,147,84,0" VerticalAlignment="Top" FontFamily="/Silicon;component/Assets/#Inter" BorderBrush="#FF242424" Background="#FF202020" Click="SettingsButton_Click" Width="100" />
        <Button x:Name="LogOutButton" Content="Log out" Height="29" Margin="320,182,84,0" VerticalAlignment="Top" FontFamily="/Silicon;component/Assets/#Inter" BorderBrush="#FF242424" Background="#FF202020" Click="LogoutButton_Click" Width="100"/>
        <TextBlock x:Name="VersionText" IsHitTestVisible="False" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="92,211,0,0" Padding="6,3,0,0" Height="20" Width="223" FontFamily="/Silicon;component/Assets/#Inter" FontSize="11" Foreground="#FFA6A6A6"/>
        <Image x:Name="AvatarImage" HorizontalAlignment="Left" Height="78" Margin="66,34,0,0" VerticalAlignment="Top" Width="78" Source="/Silicon;component/Assets/account-notsignedin.png"/>
    </Grid>
</adonisControls:AdonisWindow>
