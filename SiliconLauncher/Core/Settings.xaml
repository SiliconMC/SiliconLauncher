<adonisControls:AdonisWindow x:Class="SiliconLauncher.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SiliconLauncher"
        mc:Ignorable="d"
        xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
        xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
        xmlns:adonisExtensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
        Title="Silicon Settings"
        ResizeMode="NoResize" Height="217.09" Width="510.671" Background="#FF121212" TitleBarBackground="#FF121212" WindowStartupLocation="CenterScreen">
    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}" />
    </Window.Style>
    <Grid Background="#FF121212" Margin="0,0,0,1.518" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="252*" />
            <ColumnDefinition Width="252*" />
        </Grid.ColumnDefinitions>
        <Label x:Name="SettingsLabel" Content="Settings" HorizontalAlignment="Right" Margin="0,10,81,124.482" Width="338" FontFamily="SF Pro Display" FontSize="39" Grid.ColumnSpan="2" HorizontalContentAlignment="Center"/>
        <Button x:Name="ReturnButton" Content="Return" HorizontalAlignment="Left" Height="34" Margin="3,142,0,0" VerticalAlignment="Top" Width="88" FontFamily="SF Pro Text" BorderBrush="#FF242424" Background="#FF202020" Click="ReturnButton_Click" Grid.Column="1"/>
        <TextBox  Width="65"  VerticalAlignment="Top" HorizontalAlignment="Left" x:Name="MemoryBox" Margin="24,88,0,0" Height="26" SelectionBrush="#FF3C3C3C" FontFamily="SF Pro Text" FontSize="11" Background="#FF202020" BorderBrush="#FF242424" Text="4096" IsEnabled="False" />
        <TextBlock x:Name="MemorySuggest" IsHitTestVisible="False" Text="Memory allocated (MB)" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10,69,98,0" Padding="6,3,0,0" Height="20" Width="145" FontFamily="SF Pro Text" FontSize="11" Foreground="#FFA6A6A6" FontStyle="Italic" TextAlignment="Center"/>
        <TextBlock x:Name="SiliconVersion" IsHitTestVisible="False" Text="You are using SiliconLauncher v1.0.0D" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="31,68,10,0" Padding="6,3,0,0" Height="20" Width="211" FontFamily="SF Pro Text" FontSize="11" Foreground="#FFA6A6A6" FontStyle="Italic" TextAlignment="Right" Grid.Column="1"/>
        <TextBlock x:Name="Copyright" IsHitTestVisible="False" Text="Developed by SiliconMC" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="31,88,10,0" Padding="6,3,0,0" Height="20" Width="211" FontFamily="SF Pro Text" FontSize="11" Foreground="#FFA6A6A6" FontStyle="Italic" TextAlignment="Right" Grid.Column="1"/>
        <Button x:Name="ReturnButton_Copy" Content="Apply" HorizontalAlignment="Left" Height="34" Margin="163,142,0,0" VerticalAlignment="Top" Width="88" FontFamily="SF Pro Text" BorderBrush="#FF242424" Background="#FF202020" Click="ReturnButton_Click" IsEnabled="False"/>
        <TextBlock x:Name="Copyright_Copy" IsHitTestVisible="False" Text="Currently disabled." VerticalAlignment="Top" HorizontalAlignment="Center" Margin="148,117,146,0" Padding="6,3,0,0" Height="20" Width="211" FontFamily="SF Pro Text" FontSize="11" Foreground="#FFA6A6A6" TextAlignment="Center" Grid.ColumnSpan="2"/>
    </Grid>
    <adonisControls:AdonisWindow.TitleBarContent>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="?"
                    Style="{DynamicResource {x:Static adonisUi:Styles.WindowButton}}"
                    FontFamily="SF Pro Text"
                    FontSize="14" />
        </StackPanel>
    </adonisControls:AdonisWindow.TitleBarContent>
</adonisControls:AdonisWindow>